

<%= render 'shared/newnav' %>


<main class="profile">
  <div class="row">
    <div class="col-xs-16 col-sm-12 col-sm-offset-2">
<br>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-line form-line_light' }) do |f| %>
        <%= render 'shared/devisemes' %>
        <div class="profile-edit">
          <div class="profile-edit__title">
            <div class="row">
              <div class="col-xs-16 col-sm-8">
                <h2><%= t('.header') %></h2>
              </div>
              <div class="col-xs-16 col-sm-8">
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-16 col-sm-8">
              <fieldset class="form-group">
                <%= f.text_field :first_name, autofocus: true, placeholder: true, class: 'form-control' %>
              </fieldset>
            </div>
            <div class="col-xs-16 col-sm-8">
              <fieldset class="form-group">
                <%= f.text_field :last_name, autofocus: true, placeholder: true, class: 'form-control' %>
              </fieldset>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-16 col-sm-8">
              <fieldset class="form-group">
                <%= f.email_field :email, placeholder: true, class: 'form-control' %>
              </fieldset>
            </div>
            <div class="col-xs-16 col-sm-8">
              <fieldset class="form-group">
                <%= f.text_field :admin_ssn, placeholder: true, class: 'form-control' %>
              </fieldset>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-16 col-sm-8 col-sm-offset-7 col-xs-offset-8">
            <fieldset class="form-group">
            <h4><%= t('.birthday_title')%></h4>
            </fieldset>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-16 col-sm-8">
              <fieldset class="form-group">
                <%= f.select :admin_birth_day, (1..31).map{|day| [day, day]}, {}, id: 'dateSelect', class: 'form-control js-select2' %>
              </fieldset>
            </div>
            <div class="col-xs-16 col-sm-8">
              <fieldset class="form-group">
                <%= select_tag('admin[admin_birth_month]', options_for_select(t('date.month_names')[1..-1].each_with_index.map { |m, i| [m, i+1] }), class: 'form-control js-select2', id: 'monthSelect') %>
              </fieldset>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-16 col-sm-16">
              <fieldset class="form-group">
                <%= f.select :admin_birth_year, (1900..2017).map{ |year| [year, year]}, {}, id: 'yearSelect', class: 'form-control js-select2' %>
              </fieldset>
            </div>
          </div>

          <div class="row">
              <div class="col-xs-16 col-sm-8">
                <fieldset class="form-group">
                  <%= f.password_field :password, class: 'form-control', placeholder: true %>
                </fieldset>
              </div>
              <div class="col-xs-16 col-sm-8">
                <fieldset class="form-group">
                  <%= f.password_field :password_confirmation, class: 'form-control', placeholder: true %>
                </fieldset>
              </div>
            </div>

        <div class="profile-edit__save">
          <%= f.submit t('.save_button'), class: "btn btn-lg btn-primary" %>
        </div>
        <% end %>
    </div>
  </div>
</main>
<br>

<script src="https://checkout.stripe.com/checkout.js"></script>
<%= render 'layouts/footer' %>
<script type="text/javascript">
  $(document).ready(function() {
    Init.profile();
    $('#dateSelect, #monthSelect, #yearSelect').select2({});
});
</script>


