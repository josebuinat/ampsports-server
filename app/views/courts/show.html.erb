<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2><%= @court.court_name %> for <%= @venue.venue_name %></h2>
        <ol class="breadcrumb">
            <li>
                <a href="#"><%= current_admin.company.company_legal_name %></a>
            </li>
            <li>
                <a><%= @venue.venue_name %></a>
            </li>
            <li class="active">
                <strong><%= t('.add_title')%></strong>
            </li>
        </ol>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-6">
            <div class="ibox float-e-margins">
                <div class="ibox-content p-md">
                <h2><%= t('.court_info')%></h2>
                <p><strong><%= t('.court_sport')%></strong></p>
                <p><%= @court.sport %></p>
                <p><strong><%= t('.court_description')%></strong></p>
                <p><%= @court.court_description %></p>
                <h5><%= link_to t('.edit_link'), edit_venue_court_path  %></h5>
                </div>
            </div>
        </div>
        <div class="col-lg-6 ">
            <div class="ibox float-e-margins">
                <div class="ibox-content p-md">
                <h2><%= t('.prices_title')%></h2>
                <% if @court.prices %>
                  <%- %w(monday tuesday wednesday thursday friday saturday sunday).each do |day| %>
                    <%= render partial: 'prices', locals: {court: @court, venue: @venue, weekday: day} %>
                  <%- end %>
                <% end %>
                </div>
            </div>
        </div>
        <br>
        <div class="row">
        </div>
        <br>
    </div>
</div>



