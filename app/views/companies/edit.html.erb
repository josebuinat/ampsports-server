<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content text-center p-md">

                    <h2><span class="text-navy"><%= t('.header', name: @company.company_legal_name)%></span></h2>

                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-lg-12 white-bg">
                <div class="ibox float-e-margins">
                    <div class="ibox-content p-md">
                      <%= form_for @company do |f| %>
                        <div class="row">
                          <div class="col-md-6 ">
                              <div class="form-group">
                                <%= f.label :company_legal_name %>
                                <%= f.text_field :company_legal_name, class: 'form-control', placeholder: true, autofocus: true %>
                              </div>
                          </div>
                          <div class="col-md-6">
                              <div class="form-group">
                                <%= f.label :company_tax_id %>
                                <%= f.text_field :company_tax_id, class: 'form-control', placeholder: true, autofocus: true %>
                              </div>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col-md-6 select">
                            <div class="form-group">
                              <%= f.label :company_business_type %>
                              <%= f.select :company_business_type, t('companies.company_business_type'), id: "company_business_type", prompt: true, class: "form-control" %>
                            </div>
                          </div>
                          <div class="col-md-6 select">
                            <div class="form-group">
                              <%= f.label :company_country %>
                              <%= f.collection_select :country_id, Country.all, :id, :name, id: "country_id", prompt: true, class: "form-control" %>
                            </div>
                          </div>
                        </div>

                        <div class="row">
                          <div class="col-md-12">
                            <div class="form-group">
                                <%= f.label :company_street_address %>
                                <%= f.text_field :company_street_address, class: 'form-control', placeholder: true, autofocus: true %>
                              </div>
                          </div>
                        </div>

                        <div class="row">
                          <div class="col-md-6">
                              <div class="form-group">
                                <%= f.label :company_zip %>
                                <%= f.text_field :company_zip, class: 'form-control', placeholder: true, autofocus: true %>
                              </div>
                          </div>
                          <div class="col-md-6">
                              <div class="form-group">
                                <%= f.label :company_city %>
                                <%= f.text_field :company_city, class: 'form-control', placeholder: true, autofocus: true %>
                              </div>
                          </div>
                        </div>

                        <div class="row">
                          <div class="col-md-6">
                              <div class="form-group">
                                <%= f.label :company_website %>
                                <%= f.text_field :company_website, class: 'form-control', placeholder: true, autofocus: true %>
                              </div>
                          </div>
                          <div class="col-md-6">
                              <div class="form-group">
                                <%= f.label :company_phone %>
                                <%= f.text_field :company_phone, class: 'form-control', placeholder: true, autofocus: true %>
                              </div>
                          </div>
                        </div>

                        <div class="row">
                          <div class="col-md-6">
                            <div class="form-group">
                              <%= f.label :bank_name %>
                              <%= f.text_field :bank_name, class: 'form-control', placeholder: true, autofocus: true %>
                            </div>
                          </div>
                          <div class="col-md-6">
                            <div class="form-group">
                                <%= f.label :company_bic %>
                                <%= f.text_field :company_bic, class: 'form-control', placeholder: true, autofocus: true %>
                            </div>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col-md-12">
                            <div class="form-group">
                                <%= f.label :company_iban %>
                                <%= f.text_field :company_iban, class: 'form-control', placeholder: true, autofocus: true %>
                              </div>
                          </div>
                        </div>

                        <div class="row">
                          <div class="col-md-6">
                            <div class="form-group">
                              <%= f.label :invoice_sender_email %>
                              <%= f.email_field :invoice_sender_email, class: 'form-control', placeholder: t('.invoice_sender_email_placeholder', email: 'no-reply@playven.com'), autofocus: true %>
                            </div>
                          </div>
                        </div>

                        <div class="actions">
                          <%= f.submit t('.button'), class: "btn btn-primary" %>
                        </div>

                      <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
