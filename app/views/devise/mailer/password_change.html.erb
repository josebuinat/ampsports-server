<%= render 'layouts/mailers/basic_styles' %>

<body>
<table
    id="bodyTable"
    width="100%"
    align="center"
    border="0"
    cellpadding="0"
    cellspacing="0">
  <tr>
    <td height="30"></td>
  </tr>
  <tr>
    <td align="center" valign="top">
      <table
          id="emailContainer"
          border="0"
          cellpadding="0"
          cellspacing="0">
        <tr>
          <td align="center" valign="top">
            <table border="0" cellpadding="0" cellspacing="0" width="100%" id="emailBody">
              <tr>
                <td align="center" valign="top">
                  <%= render 'layouts/mailers/header' %>
                  <table>
                    <tr>
                      <td height="20"></td>
                    </tr>
                    <tr>
                      <td>
                        <h1 class="aligncenter"><%=t('.header', email: @resource.email) %></h1>
                      </td>
                    </tr>
                    <tr>
                      <td height="20"></td>
                    </tr>
                    <tr>
                      <td><p class="aligncenter"><%= t('.content')%></p></td>
                    </tr>
                    <tr>
                      <td height="20"></td>
                    </tr>
                    <tr>
                      <td>
                        <%= render 'layouts/mailers/best_playven' %>
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>
            </table>
          </td>
        </tr>
        <tr>
          <td align="center" valign="top">
            <table border="0" cellpadding="0" cellspacing="0" width="100%" id="emailFooter">
              <tr>
                <td align="center" valign="top">
                  <%= render 'layouts/mailers/footer' %>
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </td>
  </tr>
  <tr>
    <td height="30"></td>
  </tr>
  <tr>
    <td>
      <%= render 'layouts/mailers/footer_address' %>
    </td>
  </tr>
  <tr>
    <td height="30"></td>
  </tr>
</table>
</body>
