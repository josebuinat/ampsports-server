<%= render 'layouts/mailers/basic_styles' %>

<body>
<table
    id="bodyTable"
    width="100%"
    align="center"
    border="0"
    cellpadding="0"
    cellspacing="0">
  <tr>
    <td height="30"></td>
  </tr>
  <tr>
    <td align="center" valign="top">
      <table
          id="emailContainer"
          border="0"
          cellpadding="0"
          cellspacing="0">
        <tr>
          <td align="center" valign="top">
            <table border="0" cellpadding="0" cellspacing="0" width="100%" id="emailBody">
              <tr>
                <td align="center" valign="top">
                  <table width="100%" class="pa20">
                    <tr>
                      <td height="40"></td>
                    </tr>
                    <tr>
                      <td>
                        <h1 class="aligncenter bold">
                          <%= t('.header', name: @resource&.full_name&.titleize || @resource.email) %>
                        </h1>
                      </td>
                    </tr>
                    <tr>
                      <td height="20"></td>
                    </tr>
                    <tr>
                      <td align="center">
                        <table width="70%">
                          <tr>
                            <td>
                              <p class="aligncenter"><%= t('.content')%></p>
                            </td>
                          </tr>
                        </table>
                      </td>
                    </tr>
                    <tr>
                      <td height="20"></td>
                    </tr>
                    <tr>
                      <td align="center">
                        <%= link_to t('.link_label'), reset_password_url(@resource, @token), { :class => "btn-secondary" } %>
                      </td>
                    </tr>
                    <tr>
                      <td height="35"></td>
                    </tr>
                    <tr>
                      <td class="invoice__confirmation_message">
                        <p><%= t('.instruction_line1')%></p>
                        <p><%= t('.instruction_line2')%></p>
                      </td>
                    </tr>
                    <tr>
                      <td height="20"></td>
                    </tr>
                    <tr>
                      <td>
                        <%= render 'layouts/mailers/best_playven' %>
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>
            </table>
          </td>
        </tr>
        <tr>
          <td align="center" valign="top">
            <table border="0" cellpadding="0" cellspacing="0" width="100%" id="emailFooter">
              <tr>
                <td align="center" valign="top">
                  <%= render 'layouts/mailers/footer' %>
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </td>
  </tr>
  <tr>
    <td height="30"></td>
  </tr>
  <tr>
    <td>
      <%= render 'layouts/mailers/footer_address' %>
    </td>
  </tr>
  <tr>
    <td height="30"></td>
  </tr>
</table>
</body>
